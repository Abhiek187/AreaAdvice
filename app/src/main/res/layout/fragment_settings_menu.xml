<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsMenu">

    <TextView
        android:id="@+id/sensorrec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensorrecommendations"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sensorrecOnorOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/sensorRecOnorOff"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/enableSensorRecToggle"
        app:layout_constraintStart_toEndOf="@+id/sensorrec"/>


    <Switch
        android:id="@+id/enableSensorRecToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/sensorrec"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/maxRadiusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/maxRadius"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/sensorrec"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/radiusSeekBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/startval"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enableSensorRecToggle"
        android:padding="5dp"/>


    <SeekBar
        android:id="@+id/radiusSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:max="50"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maxRadiusText" />

    <TextView
        android:id="@+id/tempChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/tempChoiceText"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/radiusSeekBar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tempChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/tempChoiceForC"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="120dp"
        app:layout_constraintTop_toBottomOf="@+id/radiusSeekBar"
        app:layout_constraintStart_toEndOf="@+id/tempChoiceText"
        app:layout_constraintEnd_toStartOf="@+id/tempChoiceToggle" />


    <Switch
        android:id="@+id/tempChoiceToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/radiusSeekBar"
        app:layout_constraintLeft_toRightOf="@+id/tempChoice"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:checked="true"/>

    <TextView
        android:id="@+id/distChoiceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/distChoiceText"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tempChoiceText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/distChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/distChoicekmormi"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="170dp"
        app:layout_constraintEnd_toStartOf="@+id/distChoiceToggle"
        app:layout_constraintTop_toBottomOf="@+id/tempChoice"
        app:layout_constraintStart_toEndOf="@+id/distChoiceText" />

    <Switch
        android:id="@+id/distChoiceToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="21dp"
        android:padding="5dp"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/tempChoiceToggle"
        app:layout_constraintStart_toEndOf="@+id/distChoice"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
