<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="@string/search_hint"
        android:inputType="text"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonSearch"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:contentDescription="@string/search"
        android:padding="5dp"
        android:src="@mipmap/outline_search_black_18dp"
        app:layout_constraintBottom_toTopOf="@id/imageButtonFilter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/editTextSearch" />

    <ImageButton
        android:id="@+id/imageButtonFilter"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:contentDescription="@string/filter"
        android:src="@mipmap/outline_filter_list_black_18dp"
        app:layout_constraintBottom_toTopOf="@id/recycle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/imageButtonFilter"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/textViewPlacesInfo"
        android:layout_width="wrap_content"
        android:textSize="29sp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButtonFilter" />

    <!--<android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="start"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>